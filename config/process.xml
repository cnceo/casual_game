<?xml version="1.0" encoding="UTF-8"?>
<root>

    <mysql dbName="test" host ="127.0.0.1" userName="water" pwd="111111" port="3306"/>

    <allProcesses allType="super router func dbcached gateway world session">
        <zone id="self">
            <!--路由服务器-->
            <processType name="router">
                <process num="1">
                    <private listen="127.0.0.1:6000" connectTo="1:super:1"/>
                </process>
            </processType>

            <!--通用功能服务器-->
            <processType name="func">
                <process num="1">
                    <private listen="" connectTo="router:1"/>
                </process>
            </processType>


            <!--数据库服务器-->
            <processType name="dbcached">
                <process num="1">
                    <private listen="" connectTo="router:1"/>
                </process>
            </processType>


            <!--网关服务器-->
            <processType name="gateway">
                <process num="1">
                    <private listen="" connectTo="router:1"/>
                    <public  listen="0.0.0.0:2000"/>
                    <!-- <flashSandbox   listen="0.0.0.0:1843"/>-->
                    <http    listen=""/>
                </process>
            </processType>

            <!--场景逻辑服务器-->
            <processType name="world">
                <process num="1">
                    <private listen="" connectTo="router:1"/>
                </process>
            </processType>
        </zone>
    </allProcesses>
</root>
